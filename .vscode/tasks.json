{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:electron:main",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:electron:main"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "start:dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*http://localhost:5173.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "prepare:debug",
      "dependsOn": [
        "build:electron:main",
        "start:dev"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
